{
  "name": "msim-debugger",
  "publisher": "0xVector",
  "displayName": "MSIM debugger",
  "description": "MSIM emulator debugging support via DAP",
  "version": "0.0.1",
  "repository": "https://github.com/0xVector/msim-debugger",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Debuggers", "Education"
  ],
  "activationEvents": [
    "onDebug:msim",
    "onCommand:msim-debugger.activate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "msim-debugger.activate",
        "title": "Activate MSIM DAP Debugger"
      }
    ],
    "breakpoints": [
      {
        "language": "c"
      }
    ],
    "debuggers": [
      {
        "type": "msim",
        "label": "MSIM Debug",
        "program": "./bin/msim-dap"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
